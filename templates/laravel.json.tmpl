[
  {
    "name": "laravel",
    "image": "${repository_url}:develop",
    "cpu": 0,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "command": [],
    "environment": [
    ],
    "mountPoints": [],
    "volumesFrom": [],
    "secrets": [
%{ for key, value in secrets ~}
      {
        "name": "${key}",
        "valueFrom": "/laravel/${key}"
      }
%{ if length(keys(secrets)) != index(keys(secrets), key) + 1  }
      ,
%{ endif }
%{ endfor ~}
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/laravel",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
